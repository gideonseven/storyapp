<resources>
    <!-- Base application theme. -->
    <style name="Theme.Storyapp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_blue_grey_500</item>
        <item name="colorPrimaryVariant">@color/md_blue_grey_700</item>
        <item name="colorOnPrimary">@color/md_white_1000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_blue_grey_100</item>
        <item name="colorSecondaryVariant">@color/md_grey_600</item>
        <item name="colorOnSecondary">@color/md_grey_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/font_mon_regular</item>
    </style>

    <style name="Theme.Storyapp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/font_mon_regular</item>
    </style>

    <style name="Theme.Storyapp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Storyapp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DefaultButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/md_grey_500</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_56dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <!-- Layout -->
    <style name="Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Layout.Wrap" parent="Layout">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Layout.Match" parent="Layout">
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="TextContent" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/font_mon_regular</item>
    </style>

    <style name="TextContent.H1">
        <item name="android:textSize">@dimen/_44sp</item>
    </style>

    <style name="TextContent.H2">
        <item name="android:textSize">@dimen/_32sp</item>
    </style>

    <style name="TextContent.BL">
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="TextContent.BL.Bold">
        <item name="fontFamily">@font/mon_bold</item>
    </style>

    <style name="TextContent.BM">
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="TextContent.BM.Bold">
        <item name="fontFamily">@font/font_mon_bold</item>
    </style>

    <style name="TextContent.BS">
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="TextContent.BS.Bold">
        <item name="fontFamily">@font/font_mon_bold</item>
    </style>

    <style name="TextContent.BXS">
        <item name="android:textSize">@dimen/_10sp</item>
    </style>

    <style name="TextContent.BXS.Bold">
        <item name="fontFamily">@font/font_mon_bold</item>
    </style>
</resources>